vector<Shape*>
Path::extract(const Focus& f, const unsigned short proj, real factor)
{
  bool DEBUG = false; /* |true| */

  vector<Shape*> v;

  int i = 0;
  for(vector <Point*>::iterator iter = points.begin();
      iter != points.end();
      iter++)
    {
      if (DEBUG)
        cerr << "Point " << i++ << ":" << endl;
      v = (**iter).extract(f, proj, factor);
