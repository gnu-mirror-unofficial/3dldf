verbatim_metapost "verbatimtex \font\small=cmr7 etex;";

verbatim_metapost "prologues := 3;";

%% *** (3) Declarations

%% **** (4) Global variables

  point p[];
  path q[];

  q0 := origin -- (2cm, 0) -- (2cm, 2cm) -- (0, 2cm) -- cycle;
  p0 := (1cm, 0);

%% **** (4)

macro draw_sample;

def draw_sample {color c, numeric xx_shift, numeric yy_shift} =
  % message "get_name c:";
  % show get_name c;
  fill q0 shifted (xx_shift, -yy_shift) with_color c;
  label.bot("\hbox to 2cm{\hss " & capitalize (get_name c) & "\hss}",
      p0 shifted (xx_shift, -(yy_shift + .1cm)));
  label.bot("\hbox to 2cm{\hss (" & decimal cyan_part c & ", " & decimal magenta_part c &
      ", " & decimal yellow_part c & ", " & decimal black_part c &
      ")\hss}", p0 shifted (xx_shift, -(yy_shift + .5cm)));
enddef;

%% *** (3)

color cyan;
cyan := (1, 0, 0, 0);

color magenta;
magenta := (0, 1, 0, 0);

color yellow;
yellow := (0, 0, 1, 0);

color black;
black := (0, 0, 0, 1);

color red;
red := (0, 1, 1, 0);

message "red:";
show red;

color green;
green := (1, 0, 1, 0);

message "green:";
show green;

color blue;
blue := (1, 1, 0, 0);

message "blue:";
show blue;

color orange;
orange := (0, .5, 1, 0);

message "orange:";
show orange;

color violet;
violet := (.5, 1, 0, 0);

message "violet:";
show violet;

% color cerulean_blue;
% cerulean_blue := (1, .5, 0, 0);

% message "cerulean_blue:";
% show cerulean_blue;


%% *** (3) Figures

%% **** (4) Figure 1

beginfig(0);

%% ***** (5)

  draw_sample {cyan,  0, 0};
  draw_sample {magenta, 3, 0};
  draw_sample {yellow,  6, 0};
  draw_sample {black,   9, 0};

  draw_sample {red, 0, 3};
  draw_sample {green, 3, 3};
  draw_sample {blue, 6, 3};

  draw_sample {orange, 0, 6};
  draw_sample {violet, 3, 6};
%  draw_sample {cerulean_blue, 6, 6};


endfig with_projection parallel_x_y;
verbatim_metapost "end;";
end;


  % fill q0 with_color cyan;
  % label.bot("Cyan", p0 shifted (0, -.125cm));
  % label.bot("(1, 0, 0, 0)", p0 shifted (0, -.5cm));


  

  fill q0 shifted (0, -3.5cm) with_color blue;

%% ****** (6)

  fill q0 shifted (3cm, -3.5cm) with_color orange;

  fill q0 shifted (6cm, -3.5cm) with_color violet;

%% ****** (6)

  fill q0 shifted (9cm, -3.5cm) with_color cerulean_blue;

%% ****** (6)

%% ***** (5)    
    
endfig with_projection parallel_x_y;

%% **** (4)

verbatim_metapost "end;";

end;

