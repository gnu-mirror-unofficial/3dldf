%% *** (3) Declarations

%% **** (4) Global variables

  point p[];
  path q[];

  q0 := origin -- (2cm, 0) -- (2cm, 2cm) -- (0, 2cm) -- cycle;
  p0 := (1cm, 0);

%% **** (4)

macro draw_sample[];

%% ***** (5)

def draw_sample[0] {color c, numeric xx_shift, numeric yy_shift} =
  string s;
  numeric shift_val;
  shift_val := .1cm;
  s := get_name c;
  fill q0 shifted (xx_shift, -yy_shift) with_color c;
  if length s > 0:
    s := capitalize s;
    label.bot("\hbox to 3cm{\hss " & s & "\hss}",
	p0 shifted (xx_shift, -(yy_shift + .1cm)));
    shift_val := .5cm;
  fi;
  label.bot("\hbox to 3cm{\hss (" & decimal cyan_part c & ", " & decimal magenta_part c &
      ", " & decimal yellow_part c & ", " & decimal black_part c &
      ")\hss}", p0 shifted (xx_shift, -(yy_shift + shift_val)));
enddef;

%% ***** (5)

def draw_sample[1] {numeric ccyan, numeric mmagenta, numeric yyellow,
                    numeric bblack, numeric xx_shift, numeric yy_shift} =
  string s;
  color c;
  c := (ccyan, mmagenta, yyellow, bblack);
  unset_name c;
  fill q0 shifted (xx_shift, -yy_shift) with_color c;
  label.bot("\hbox to 3cm{\hss(" & decimal cyan_part c & ", "  & decimal magenta_part c &
      ", " & decimal yellow_part c & ", " & decimal black_part c & ")\hss}",
      p0 shifted (xx_shift, -(yy_shift + .1)));
enddef;



