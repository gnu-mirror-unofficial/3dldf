bool
Dash_Pattern::show(string text) const
{

  bool return_value = true;
  
  if (text == "")
    text = "Dash_Pattern:";
  
  cerr << text << endl << "type: ";

  if (type == EVENLY)
    cerr << "EVENLY" << endl;

  else if (type == WITH_DOTS)
    cerr << "WITH_DOTS" << endl;
       
  else
    {
      cerr << "ERROR! In Dash_Pattern::show():" << endl 
           << "Invalid type: " << type << endl
           << "Will return `false'." << endl;
      return_value = false;

    }
  
  transform.show("transform:");

  return return_value;
}

