void
Newwrite::operator=(const string& s)
{

    if (filename == s)
    {
        cerr << "WARNING!  In `Newwrite::operator=':" << endl 
             << "Argument `s' == `filename' == " << filename 
             << endl
             << "Ignoring.  Use `reopen' to reopen file, if it's closed."
             << endl 
             << "Use `is_open' to determine whether file is open."
             << endl
             << "Exiting function with `void' return value."
             << endl;

        return;
    }

    if (out_strm.is_open())
       out_strm.close();
    
    filename = s;

    out_strm.open(s.c_str());

    return;

}  /* End of |Newwrite::operator=(const Newwrite& h)| definition.  */

