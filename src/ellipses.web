          log_message(cerr_strm);
          cerr_message(cerr_strm, error_stop_value);
          cerr_strm.str("");

          cerr_mutex.lock(); 
          M.show("M:");      
          cerr_mutex.unlock();                    

      }  /* |if (M.unit_vector() != x_axis_pt)|  */
      
    Ellipse e(origin_pt, h_length, v_length, 0, 0, 0, point_count);
    e *= t.inverse();
    return e;

